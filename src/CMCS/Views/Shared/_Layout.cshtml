<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Claims" asp-action="Index">CMCS</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="Index">Claims</a></li>
                    @{
                        var sessRole = Context.Session.GetString("role");
                        if (sessRole == "Lecturer")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="Create">Submit Claim</a></li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @{
                        var username = Context.Session.GetString("username");
                        var role = Context.Session.GetString("role");
                    }
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item"><span class="nav-link">@username (@role)</span></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>